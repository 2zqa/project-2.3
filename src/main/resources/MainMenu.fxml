<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <HBox spacing="10" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Button text="Boter-kaas-en-eieren" onAction="#pressTTTMenuButton"/>
    </HBox>
    <HBox spacing="10" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Button text="Othello" onAction ="#pressOthelloMenuButton"/>
    </HBox>
    <HBox spacing="10" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Button text="Configuratie" onAction ="#pressConfigurationButton"/>
    </HBox>
    <HBox spacing="10" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button text="Spel afsluiten" onAction ="#pressExitButton"/>
    </HBox>

    <Text fx:id="actiontarget"  GridPane.columnIndex="0" GridPane.rowIndex="4"/>
</GridPane>